{
    "name": "directus-portfolio",
    "version": "1.0.0",
    "description": "Directus Portfolio Project using CLI",
    "scripts": {
        "bootstrap": "directus bootstrap",
        "apply-schema": "directus schema apply --yes ./portfolio-schema.yaml",
        "dry-run": "directus schema apply --dry-run ./portfolio-schema.yaml",
        "snapshot": "directus schema snapshot ./schema-backup-$(date +%Y%m%d).yaml",
        "list-users": "directus users list",
        "list-roles": "directus roles list",
        "list-collections": "directus collections list"
    },
    "engines": {
        "node": ">=18.17.0"
    }
}