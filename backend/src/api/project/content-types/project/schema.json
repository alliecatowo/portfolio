{
    "kind": "collectionType",
    "collectionName": "projects",
    "info": {
        "singularName": "project",
        "pluralName": "projects",
        "displayName": "Project",
        "description": "Developer portfolio projects"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text",
            "required": true
        },
        "slug": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "technologies": {
            "type": "json"
        },
        "websiteUrl": {
            "type": "string"
        },
        "githubUrl": {
            "type": "string"
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "In Progress",
                "Completed",
                "Maintenance"
            ],
            "default": "Completed"
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "projects"
        }
    }
}