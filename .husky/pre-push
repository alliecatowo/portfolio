# Optionally source husky helper if present
if [ -f "$(dirname -- "$0")/_/husky.sh" ]; then
  . "$(dirname -- "$0")/_/husky.sh"
fi

echo "üß™ Type checking frontend before push..."
if command -v pnpm >/dev/null 2>&1; then
  pnpm -C frontend exec vue-tsc -p tsconfig.json --noEmit
elif command -v npx >/dev/null 2>&1; then
  (cd frontend && npx --no-install vue-tsc -p tsconfig.json --noEmit)
else
  echo "‚ö†Ô∏è Neither pnpm nor npx found; skipping typecheck"
  exit 0
fi
