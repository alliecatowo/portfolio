{
    "name": "portfolio-monorepo",
    "version": "1.0.0",
    "description": "Portfolio website with Nuxt frontend and Strapi backend",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "engines": {
        "node": "^22.0.0"
    },
    "scripts": {
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run develop",
        "dev": "./start-portfolio.sh",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "build": "npm run build:backend && npm run build:frontend",
        "start:frontend": "cd frontend && npm run start",
        "start:backend": "cd backend && npm run start",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "test:build": "./build-test.sh",
        "clean": "rm -rf frontend/node_modules backend/node_modules frontend/.nuxt frontend/.output backend/.cache backend/build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}