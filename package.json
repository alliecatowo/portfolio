{
  "name": "portfolio",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare || true",
    "start": "node .output/server/index.mjs",
    "typecheck": "nuxi typecheck",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "lockfile:check": "pnpm install --frozen-lockfile --prefer-offline",
    "lockfile:update": "pnpm install && git add pnpm-lock.yaml",
    "db:clean": "rm -rf .data/content/contents.sqlite",
    "db:rebuild": "pnpm db:clean && nuxt prepare",
    "dev:clean": "pnpm db:clean && pnpm dev",
    "emulators:build": "pnpm generate && firebase emulators:start --only hosting",
    "emulate": "pnpm generate && firebase emulators:start --only hosting"
  },
  "dependencies": {
    "@nuxt/content": "^3.6.3",
    "@nuxt/image": "^1.11.0",
    "@nuxt/ui": "4.0.0-alpha.0",
    "@nuxtjs/robots": "^5.5.1",
    "@nuxtjs/sitemap": "^7.4.3",
    "@pinia/nuxt": "^0.5.1",
    "nuxt-og-image": "^5.1.9",
    "pinia": "^2.1.7",
    "sharp": "^0.34.3",
    "vue": "^3.5.13",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify-json/lucide": "^1.2.65",
    "@nuxt/cli": "^3.28.0",
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.5.6",
    "@nuxt/schema": "^4.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.27.0",
    "eslint-plugin-vuejs-accessibility": "^2.3.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "nuxi": "^3.28.0",
    "nuxt": "^4.0.0",
    "pa11y": "^9.0.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.0",
    "vue-tsc": "^2.0.28"
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "**/*.{css,scss,md,yml,yaml,json}": [
      "prettier --write"
    ],
    "package.json": [
      "bash -c 'pnpm lockfile:check'"
    ]
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "linux",
        "current"
      ],
      "cpu": [
        "x64",
        "current"
      ],
      "libc": [
        "glibc",
        "musl",
        "current"
      ]
    },
    "overrides": {
      "sharp": "^0.34.3"
    }
  },
  "pnpmConfig": {
    "enable-pre-post-scripts": true,
    "auto-install-peers": true
  }
}
